{
  "name": "@alphasquad/storefront-workspace",
  "version": "0.1.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "npm run dev -w @alphasquad/example-tenant",
    "postinstall": "npm run build -w @alphasquad/storefront-config && npm run build -w @alphasquad/storefront-base",
    "build": "npm run build -w @alphasquad/storefront-config && npm run build -w @alphasquad/storefront-base",
    "build:tenant": "npm run build -w @alphasquad/example-tenant",
    "lint": "npm run lint --workspaces --if-present",
    "typecheck": "npm run typecheck --workspaces --if-present",
    "smoke": "node ./scripts/smoke-test-packages.mjs",
    "changeset": "changeset",
    "version-packages": "changeset version",
    "release": "changeset publish"
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.7"
  }
}
